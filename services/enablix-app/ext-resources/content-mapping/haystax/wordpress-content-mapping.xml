<?xml version="1.0" encoding="utf-8"?>
<contentMapping id="Wordpress-WP-Post" name="Wordpress Post content mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/content-mapping.xsd">
	
	<container qualifiedId="blog">
		<sourceId>post.id</sourceId>
		<contentItemMappings>
			<itemMapping itemId="title">post.title.rendered</itemMapping>
			<itemMapping itemId="url">post.link</itemMapping>
			<itemMapping itemId="blogdate">post.date_gmt</itemMapping>
			<!-- default visibility = Everyone -->
			<itemMapping itemId="visibility" listAttribute="ID" 
						 default="597c02aa-0b62-429b-9826-a52bfccfb2f6"></itemMapping>
		</contentItemMappings>
	</container>
	
	<container qualifiedId="article">
		<sourceId>post.id</sourceId>
		<contentItemMappings>
			<itemMapping itemId="title">post.title.rendered</itemMapping>
			<itemMapping itemId="url">post.link</itemMapping>
			<!-- default visibility = Everyone -->
			<itemMapping itemId="visibility" listAttribute="ID" 
			   			 default="597c02aa-0b62-429b-9826-a52bfccfb2f6"></itemMapping>
		</contentItemMappings>
	</container>

</contentMapping>