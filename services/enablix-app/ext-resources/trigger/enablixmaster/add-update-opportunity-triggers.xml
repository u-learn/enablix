<?xml version="1.0" encoding="utf-8"?>
<triggersDef xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/trigger-lifecycle.xsd">
	<contentTriggerDef id="add-opportunity-trigger" type="CONTENT_ADD">
		<candidateContainers>
			<containerQId>customer.opportunity</containerQId>
		</candidateContainers>
		<lifecycle>
			<checkpoint>
				<executionTime type="NOW"/>
				<actions>
					<correlation execOrder="1"/>
				</actions>
			</checkpoint>
			<checkpoint>
				<executionTime type="LATER">
					<after timeUnit="DAY" timeValue="30">
						<resetOn>
							<triggerEntityUpdate>
								<attributeUpdate>
									<on name=""/>
									<except name=""/>
								</attributeUpdate>
							</triggerEntityUpdate>
						</resetOn>
						<disableOn>
							<triggerEntityUpdate>
								<entityMatch>
									<filter>
										<attributeId>stage</attributeId>
										<constant>Closed</constant>
									</filter>
								</entityMatch>
							</triggerEntityUpdate>
						</disableOn>
					</after>
				</executionTime>
				<actions>
					<email execOrder="1">
					</email>
				</actions>
			</checkpoint>
		</lifecycle>
	</contentTriggerDef>
	<contentTriggerDef id="update-opportunity-trigger" type="CONTENT_UPDATE">
		<candidateContainers>
			<containerQId>customer.opportunity</containerQId>
		</candidateContainers>
		<lifecycle>
			<checkpoint>
				<executionTime type="NOW"/>
				<actions>
					<correlation execOrder="1"/>
				</actions>
			</checkpoint>
		</lifecycle>
	</contentTriggerDef>
</triggersDef>