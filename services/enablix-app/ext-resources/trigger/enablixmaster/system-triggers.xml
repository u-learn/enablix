<?xml version="1.0" encoding="utf-8"?>
<triggersDef xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/trigger-lifecycle.xsd">
	<contentTriggerDef id="solution-container-content-add-trigger" type="CONTENT_UPDATE">
		<candidateContainers>
			<containerQId>solution</containerQId>
			<containerQId>solution.solutionSheet</containerQId>
			<containerQId>product</containerQId>
		</candidateContainers>
		<lifecycle>
			<checkpoint>
				<executionTime type="NOW"/>
				<actions>
					<correlation execOrder="1"/>
					<email execOrder="2">
						<emailTemplate>
							<subject templateName="addContent_subject.vm"/>
							<body templateName="addContent_body.vm"/>
						</emailTemplate>
						<emailContent>
							<triggerEntity/>
						</emailContent>
						<recipient>
							<correlatedUsers>
								<users>
									<filterTags>
										<tag>SALES_PERSON</tag>
									</filterTags>
								</users>
								<users>
									<filterTags>
										<tag>#CONTENT_CREATOR#</tag>
									</filterTags>
								</users>
							</correlatedUsers>
						</recipient>
					</email>
				</actions>
			</checkpoint>	
		</lifecycle>
	</contentTriggerDef>
</triggersDef>