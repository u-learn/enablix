<?xml version="1.0" encoding="utf-8"?>
<itemUserCorrelationRules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/item-correlation-rule.xsd">
	<itemUserCorrelationRule id="sales-play-user" name="Sales Play - Users">
		<triggerItem qualifiedId="salesPlay">
		</triggerItem>
		<relatedUsers>
			<relatedUserPath>
				<pathItem qualifiedId="businessRole">
					<filterCriteria>
						<filter>
							<attributeId>roleName</attributeId>
							<constant>Sales</constant>
						</filter>
					</filterCriteria>
					<relatedUser>
						<filterCriteria>
							<filter>
								<attributeId>role</attributeId>
								<parentAttribute>identity</parentAttribute>
							</filter>
						</filterCriteria>
						<tags>
							<tag>SALES_REPS</tag>
						</tags>
					</relatedUser>
				</pathItem>
			</relatedUserPath>
		</relatedUsers>
	</itemUserCorrelationRule>	
</itemUserCorrelationRules>
