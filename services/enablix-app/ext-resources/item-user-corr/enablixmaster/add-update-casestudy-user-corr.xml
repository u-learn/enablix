<?xml version="1.0" encoding="utf-8"?>
<itemUserCorrelationRules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/item-correlation-rule.xsd">
	<itemUserCorrelationRule id="case-study-opp-creator" name="Case Study - Opportunity creator">
		<triggerItem qualifiedId="caseStudy">
		</triggerItem>
		<relatedUsers>
			<relatedUserPath>
				<pathItem qualifiedId="customer.opportunity">
					<filterCriteria>
						<filter>
							<attributeId>oppSolutions</attributeId>
							<parentAttribute>solutions</parentAttribute>
						</filter>
					</filterCriteria>
					<relatedUser>
						<filterCriteria>
							<filter>
								<attributeId>email</attributeId>
								<parentAttribute>createdBy</parentAttribute>
							</filter>
						</filterCriteria>
						<tags>
							<tag>OPP_VIA_SOLN_CREATOR</tag>
						</tags>
					</relatedUser>
				</pathItem>
			</relatedUserPath>
		</relatedUsers>
	</itemUserCorrelationRule>	
</itemUserCorrelationRules>
